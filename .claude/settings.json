{
  "permissions": {
    "allow": [
      "Bash(uv sync)",
      "Bash(uv run uvicorn app.main:app --reload)",
      "Bash(uv run python -m pytest:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff:*)",
      "Bash(uv run black:*)",
      "Bash(uv run isort:*)",
      "Bash(uv run mypy:*)",
      "Bash(uv run alembic:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git add:*)",
      "Bash(git commit -m:*)",
      "Bash(git restore:*)",
      "Bash(git reset --soft:*)",
      "Bash(git reset --mixed:*)",
      "Bash(gh issue view:*)",
      "Read(**/*)",
      "Edit(**/*)"
    ],
    "deny": [
      "WebFetch",
      "Read(./.env)",
      "Read(./.env.*)",
      "Edit(./.env)",
      "Edit(./.env.*)",
      "Read(**/*.pem)",
      "Edit(**/*.pem)",
      "Read(**/*id_rsa*)",
      "Edit(**/*id_rsa*)",
      "Read(**/*secret*)",
      "Edit(**/*secret*)",
      "Read(**/secrets/**)",
      "Edit(**/secrets/**)"
    ]
  }
}